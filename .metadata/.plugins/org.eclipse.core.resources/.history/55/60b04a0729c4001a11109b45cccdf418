package toy_project;

import java.util.*;

public class tetris_block {
	public List<Point> make_block(int j) {
		List<Point> list = new ArrayList<>();

		// ㅡ 모양 블록
		if (j == 0) {
			int[] x_idx = { 4, 5, 6, 7 };
			int[] y_idx = { 0, 0, 0, 0 };
		} else if (j == 1) {
			// ㅗ 모양 블록
			int[] x_idx = { 4, 5, 5, 6 };
			int[] y_idx = { 1, 0, 1, 1 };

		} else if (j == 2) {
			// ㄴ 모양 블록
			int[] x_idx = { 4, 5, 6, 6 };
			int[] y_idx = { 1, 1, 1, 0 };

		} else if (j == 3) {

		} else {

		}

		return list;
	}

	private class Point {
		int x, y;

		public Point(int x, int y) {
			this.x = x;
			this.y = y;
		}
	}
}
